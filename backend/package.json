{
  "name": "letsdoprenup-backend",
  "version": "1.0.0",
  "description": "Backend API for Let's Do Prenup platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "build:lambda": "tsc && cp package.json dist/ && cd dist && npm install --production",
    "start": "node dist/server.js",
    "start:lambda": "node dist/lambda.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "dynamodb:local": "docker run -p 8000:8000 amazon/dynamodb-local -jar DynamoDBLocal.jar -sharedDb -inMemory",
    "setup:tables": "ts-node scripts/setupTables.ts",
    "package:lambda": "npm run build:lambda && cd dist && zip -r ../lambda-deployment.zip ."
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "@aws-sdk/credential-providers": "^3.490.0",
    "aws-serverless-express": "^3.4.0",
    "handlebars": "^4.7.8",
    "nodemailer": "^6.9.7",
    "express-rate-limit": "^7.1.5",
    "aws-lambda": "^1.0.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.8.10",
    "@types/nodemailer": "^6.4.14",
    "@types/aws-lambda": "^8.10.130",
    "@types/aws-serverless-express": "^3.3.5",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  }
}